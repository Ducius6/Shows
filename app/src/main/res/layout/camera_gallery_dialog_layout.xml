<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/cameraDialogLinearLayout">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cameraTextView"
            android:textSize="@dimen/dimens18sp"
            android:layout_marginTop="@dimen/dimens35dp"
            android:layout_marginStart="@dimen/dimens24dp"
            android:layout_marginBottom="@dimen/dimens30dp"
            android:textColor="@color/text_color4"
            android:text="@string/camera" android:fontFamily="sans-serif-medium"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimens24dp"
            android:layout_marginBottom="@dimen/dimens35dp"
            android:id="@+id/galleryTextView"
            android:textSize="@dimen/dimens18sp"
            android:textColor="@color/text_color4"
            android:text="@string/gallery" android:fontFamily="sans-serif-medium"/>

</LinearLayout>
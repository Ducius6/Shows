<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="312dp"
        android:layout_centerHorizontal="true"
        android:layout_height="335dp">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seasonPickerTextView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/dimens37dp"
            android:layout_marginStart="@dimen/dimens80dp"
            android:textSize="@dimen/dimens16sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="@color/pink"
            android:text="@string/season"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/episodePickerTextView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/seasonPickerTextView"
            android:layout_marginTop="@dimen/dimens37dp"
            android:layout_marginStart="@dimen/dimens66dp"
            android:layout_marginEnd="@dimen/dimens73dp"
            android:textSize="@dimen/dimens16sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="@color/pink"
            android:text="@string/episode"/>

    <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seasonNumberPicker"
            app:layout_constraintTop_toBottomOf="@id/seasonPickerTextView"
            app:layout_constraintStart_toStartOf="@id/seasonPickerTextView"
            android:layout_marginBottom="@dimen/dimens105dp"></NumberPicker>

    <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/episodeNumberPicker"
            app:layout_constraintTop_toBottomOf="@id/episodePickerTextView"
            app:layout_constraintStart_toStartOf="@id/episodePickerTextView"
            android:layout_marginBottom="@dimen/dimens105dp"></NumberPicker>

</androidx.constraintlayout.widget.ConstraintLayout>
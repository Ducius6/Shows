<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WelcomeActivity">

    <ImageView android:layout_width="120dp"
               android:layout_height="120dp"
               android:id="@+id/placeholder"
               android:src="@mipmap/ic_placeholder_registration"
               app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="120dp"
               app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="182dp"
               app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="120dp"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/yourInText"
              app:layout_constraintTop_toBottomOf="@id/placeholder"
              android:layout_marginTop="17dp"
              android:textSize="28sp"
              android:textColor="#2e2e2e"
              android:lineSpacingExtra="12sp"
              android:gravity="center_horizontal"
              android:text="Youâ€™re in!"
              android:fontFamily="@font/karla_bold"
              tools:layout_editor_absoluteX="9dp"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/welcomeText"
              app:layout_constraintTop_toBottomOf="@id/yourInText"
              android:layout_marginTop="85dp"
              android:textColor="#505050"
              android:textSize="15sp"
              android:lineSpacingExtra="7sp"
              android:gravity="center_horizontal"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="91dp"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="92dp"
              android:fontFamily="@font/karla"/>

</android.support.constraint.ConstraintLayout>
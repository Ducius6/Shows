<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WelcomeActivity">

    <ImageView android:layout_width="@dimen/dimens120dp"
               android:layout_height="@dimen/dimens120dp"
               android:id="@+id/placeholder"
               android:src="@drawable/ic_placeholder_registration"
               app:layout_constraintTop_toTopOf="parent"
               android:layout_marginEnd="@dimen/dimens120dp"
               app:layout_constraintEnd_toEndOf="parent"
               android:layout_marginTop="@dimen/dimens182dp"
               app:layout_constraintStart_toStartOf="parent"
               android:layout_marginStart="@dimen/dimens120dp"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/yourInText"
              app:layout_constraintTop_toBottomOf="@id/placeholder"
              android:layout_marginTop="@dimen/dimens17dp"
              android:textSize="@dimen/dimens28sp"
              android:textColor="@color/textColor"
              android:lineSpacingExtra="@dimen/dimens12sp"
              android:gravity="center_horizontal"
              android:text="@string/you_re_in"
              android:fontFamily="@font/karla_bold"
              tools:layout_editor_absoluteX="9dp"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/welcomeText"
              app:layout_constraintTop_toBottomOf="@id/yourInText"
              android:layout_marginTop="@dimen/dimens85dp"
              android:textColor="@color/text_color2"
              android:textSize="@dimen/dimens15sp"
              android:lineSpacingExtra="@dimen/dimens8sp"
              android:gravity="center_horizontal"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginEnd="@dimen/dimens91dp"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginStart="@dimen/dimens91dp"
              android:fontFamily="@font/karla"/>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ShowsActivity">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/showsTextView"
              android:textSize="28sp"
              android:text="Shows"
              android:textColor="#2e2e2e"
              android:lineSpacingExtra="12sp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintLeft_toRightOf="parent"
              android:layout_marginStart="16dp"
              app:layout_goneMarginEnd="1dp"
              android:layout_marginTop="19dp"/>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/showsRecyclerView"
            app:layout_constraintTop_toBottomOf="@+id/showsTextView"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="23dp"
            android:layout_marginStart="16dp"></androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>
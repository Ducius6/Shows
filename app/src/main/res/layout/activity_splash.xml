<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              tools:context=".SplashActivity"
              android:orientation="vertical"
              android:weightSum="10">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/upperRoot"
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens0dp">

        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/dropDownLogo"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintBottom_toTopOf="parent"
                   android:src="@drawable/ic_logo_mark"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lowerRoot"
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens0dp">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/showsSplash"
                  android:text="@string/splash_shows"
                  android:visibility="invisible"
                  android:textAllCaps="false"
                  android:lineSpacingExtra="@dimen/dimens12sp"
                  android:textColor="@color/black"
                  android:textSize="50sp"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintTop_toTopOf="@id/lowerRoot"
                  android:layout_marginTop="@dimen/dimens8dp"
                  android:fontFamily="@font/archivo_black"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>

<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ErrorAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/pink</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ShowButton">
        <item name="android:textSize">@dimen/dimens16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:paddingTop">@dimen/dimens15dp</item>
        <item name="android:paddingBottom">@dimen/dimens13dp</item>
    </style>

</resources>

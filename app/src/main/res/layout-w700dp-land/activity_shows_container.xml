<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:weightSum="100"
              android:baselineAligned="false"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <FrameLayout android:layout_width="@dimen/dimens1dp"
                 android:layout_height="match_parent"
                 android:layout_weight="40"
                 android:id="@+id/masterFragmentContainer"/>

    <RelativeLayout android:layout_width="@dimen/dimens2dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray"
                    android:layout_marginVertical="@dimen/dimens80dp"/>

    <FrameLayout android:layout_width="@dimen/dimens1dp"
                 android:layout_height="match_parent"
                 android:id="@+id/detailsFragmentContainer"
                 android:layout_weight="60"/>

</LinearLayout>